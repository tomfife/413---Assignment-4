<!DOCTYPE html>
<html lang="en">

<head>
    <title>Provo's Top 5 Restaurants</title>
    <meta name="viewport" content="width=device-width" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
</head>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top" style="opacity: .95">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">Good Eats Provo</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" asp-action="Index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="Suggestions">Suggestions</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<body class="p-3 mb-2 bg-secondary text-black" style="height: 100%">
    <br />
    <br />
    <div class="text-center">
        <h1 style="text-shadow: 3px 3px 0 #000, -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000; " class="display-3 text-white">
            @ViewBag.Title
        </h1>
    </div>
    <br />

    @RenderBody()

    <footer class="py-3 bg-dark text-white-50 fixed-bottom" style="margin-top: 100px; opacity: .9">
        <div class="container-fluid navbar-brand text-center">
            <small>Copyright &copy; 2021 - Thomas Fife, Inc.</small>
        </div>
    </footer>
</body>

</html>
